---
import Layout from '../layouts/Layout.astro'
import Nav from '../components/nav.astro'
import data from "../json/apps.json";
import Game from '../components/game.astro';
---

<main style="z-index: 100;">
    <Layout title="Ghost">
        <Nav />
        <center>
            <p class="ex2" style="animation: fadeIn .4s;">Ap<x>p</x>s</p>
            <p>
                You can request games on the <a
                    href="https://discord.gg/dbyDXfs5dN"
                    >Dis<x>co</x>rd serv<x>er</x></a
                >
            </p>
            <script type='text/javascript' is:inline src='//pl25533607.profitablecpmrate.com/d2/c0/09/d2c00916f17b63e473989f767d1082ff.js'></script>
            <script async="async" is:inline data-cfasync="false" src="//pl25527333.profitablecpmrate.com/d00b3b529c7e75cacbb98e16680c5373/invoke.js"></script>
            <div class="acontainer" id="acontainer">
                {data.map((data: { name: string; href: string; img: string; }) => <Game name={data.name} href={data.href} img={data.img} />)}

            </div>
            <div id="container-d00b3b529c7e75cacbb98e16680c5373"></div>
        </center>
    </Layout>
</main>
